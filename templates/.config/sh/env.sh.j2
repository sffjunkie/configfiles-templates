#!/bin/sh
CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}

export PATH="$(du "${HOME}/.local/bin/" | cut -f2 | tr '\n' ':' | sed 's/:*$//'):$PATH"

export EDITOR='nvim'
export BROWSER='/usr/bin/firefox'
export TERMINAL='alacritty'
export MUSIC_MOUNT='/mnt/music/mary'
export MUSIC_PLAYER='ncmpcpp'
export MUSIC_VISUALIZER='vis'
export FILE_MANAGER='ranger'
export AUDIO_MIXER='pulsemixer'
export AUDIO_VOLUME_CMD='~/.local/bin/vol'

export WGETRC="${CONFIG_HOME}/wget/wgetrc"
export INPUTRC="${CONFIG_HOME}/inputrc"

export ANSIBLE_CONFIG="${CONFIG_HOME}/ansible/ansible.cfg"
export ANDROID_SDK_HOME="${CONFIG_HOME}/android"

export GNUPGHOME="${HOME}/.local/gnupg"

export KODI_DATA="${XDG_DATA_HOME}/kodi"
export PASSWORD_STORE_DIR="${XDG_DATA_HOME}/password-store"
export WINEPREFIX="${XDG_DATA_HOME}/wineprefixes/default"

export TMUX_TMPDIR="$XDG_RUNTIME_DIR"

export LESSHISTFILE=$XDG_CACHE_HOME/lesshst
export LESS="-R -c"
export LESSOPEN="| pygmentize %s"
export LESS_TERMCAP_mb="$(printf '%b' '[1;31m')"
export LESS_TERMCAP_md="$(printf '%b' '[1;36m')"
export LESS_TERMCAP_me="$(printf '%b' '[0m')"
export LESS_TERMCAP_so="$(printf '%b' '[01;44;33m')"
export LESS_TERMCAP_se="$(printf '%b' '[0m')"
export LESS_TERMCAP_us="$(printf '%b' '[1;32m')"
export LESS_TERMCAP_ue="$(printf '%b' '[0m')"

export PERL5LIB=${CONFIG_HOME}/.local/lib/perl5

export GTK_THEME=Arc:dark
export QT_STYLE_OVERRIDE=adwaita

export DEV_HOME=${HOME}/development

{% for lang in dev_roles %}
source ${CONFIG_HOME}/sh/{{ lang }}.sh
{% endfor %}

[[ ! -z "${WSLENV}" ]] && source ${CONFIG_HOME}/sh/wsl2.sh
